{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "es2017",
      "es2015.promise",
      "esnext.asynciterable"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "filesGlob": [
    "types/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "types": [
    "react",
    "react-native",
    "jest",
    "nodes",
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules",
    "__tests__",
  ],
  "compileOnSave": false
}